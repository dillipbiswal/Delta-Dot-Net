<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="Datavail.Delta.Cloud" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WebRole name="Datavail.Delta.WebServices" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="Endpoint1" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="Endpoint1" protocol="https" port="443" certificate="datavail.com Wildcard" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <Certificates>
      <Certificate name="datavail.com Wildcard" storeLocation="LocalMachine" storeName="My" />
    </Certificates>
    <ConfigurationSettings>
      <Setting name="DeltaStorageConnectionString" />
      <Setting name="DeltaConnectionString" />
      <Setting name="DeltaPluginBlobPath" />
    </ConfigurationSettings>
  </WebRole>
</ServiceDefinition>