@model Datavail.Delta.Domain.DayOfWeek

@{
    var allValues = Enum.GetValues(typeof(Datavail.Delta.Domain.DayOfWeek)).Cast<Datavail.Delta.Domain.DayOfWeek>();
    allValues = allValues.Where(x => x != Datavail.Delta.Domain.DayOfWeek.NotSpecified ).ToArray();
   
}

@Html.DropDownListFor(m => m, allValues
    .Select(m => {
        string enumVal = Enum.GetName(Model.GetType(), m);
        return new SelectListItem() {
            Selected = (Model.ToString() == enumVal),
            Text = enumVal,
            Value = enumVal
        };
    }))

